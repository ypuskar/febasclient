extends layout
block content
  #muudatekst.modal(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal")
            span(aria-hidden="true") x
            span.sr-only Close
          h4 Täienda kommentaari
        .modal-body
          form(method='POST' action='')
            div.form-group
